{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
},
"include": ["."],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020", 
    "lib": [
      "ES2020"
    ],                  
    "module": "commonjs",                            
    "baseUrl": ".",                                 
    "paths": {
      "@/*": ["./*"],
    },   
     "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                                       
    "skipLibCheck": true                               
  }
}
